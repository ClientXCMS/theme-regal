{% if title %}
    <li class="menu-header">{{ trans(title) }}</li>
{% endif %}
{% if current_user() %}
    {% for i, item in online %}
        <li class="nav-item {{ is_subpath(item.route)  ? 'active' : '' }}">

            {% if item.items is not empty %}

                <a class="nav-link" data-toggle="collapse" href="#tabs-{{ i }}" aria-expanded="false" aria-controls="tabs-{{ i }}">
                    <i class="{{ item.icon }} menu-icon"></i>
                    <span class="menu-title">{{ trans(item.name) }}</span>
                    <i class="menu-arrow"></i>
                </a>
                <div class="collapse" id="tabs-{{ i }}">
                    <ul class="nav flex-column sub-menu">

                        {% for link, content in item.items %}
                            <li class="nav-item"><a class="nav-link" href="{{ link }}">{{ content }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% else %}
                <a class="nav-link" href="{{ path(item.route) }}">
                    <i class="{{ item.icon }} menu-icon"></i>
                <span class="menu-title">
                    {{ trans(item.name) }}
                </span>
                {% if item.value %}
                    <div class="float-right">
                        <span class="badge badge-danger">{{ item.value }}</span>
                    </div>
                {% endif %}
            </a>
                {% endif %}
        </li>
    {% endfor %}
{% endif %}

