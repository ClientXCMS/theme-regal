{% set mail_messages = mail_messages() %}

{% include "includes/head.twig" with {title: block('title') } %}
<body>
{% include "includes/header.twig" %}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-sm-12 mb-4 mb-xl-0">
                <h4 class="font-weight-bold text-dark">{{ block('title') }}</h4>
            </div>
        </div>

    <div class="col-12 mt-">
        {% if flash('success') %}
            <div class="alert alert-success">
                {{ flash('success') }}
            </div>
        {% endif %}
        {% if flash('error') %}
            <div class="alert alert-danger">
                {{ flash('error') }}
            </div>
        {% endif %}
        {% if flash('warning') %}
            <div class="alert alert-warning">
                {{ flash('warning') }}
            </div>
        {% endif %}
        {% if flash('info') %}
            <div class="alert alert-info">
                {{ flash('info') }}
            </div>
        {% endif %}
    </div>
    {% block body %}{% endblock %}

{% include "includes/footer.twig" %}
{% block scripts %}{% endblock %}
</body>
</html>
